<main class="contenedor">
    <form action="/edit-profile" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Name</label>
            <input value="{{user.name}}" type="text" name="name" placeholder="Your Name" >
        </div>

        <div class="campo">
            <label>E-mail</label>
            <input {{user.email}} type="email" name="email" placeholder="Your E-mail" >
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Your Password">
        </div>

         <div class="campo">
            <label>Image</label>
            <input type="file" name="image" placeholder="Your Photo profile">
            <img src="uploads/profiles/{{user.image}}" alt="" class="admin-perfil">
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Save Changes">
        </div>
    </form>
</main>